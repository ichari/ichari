static string FixParameterName(string name, CodeGenerationTools code)
{
    //  将任何形式为“id”(不区分大小写)的属性更改为“ID”
    //  因为“iD”与 FxCop 规则冲突。
    if (StringComparer.OrdinalIgnoreCase.Equals(name, "id"))
    {
        //  返回所有小写，因为它是缩写，而不是首字母缩略词。
        return "id";
    }
    return code.CamelCase(name);
}

